@page "/Articles"
@page "/Articles/Index"


<h3>Index</h3>

<div>
    <a href="/Articles/Create" class="btn btn-primary">Create</a>
</div>

@if (_articles == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in _articles)
            {
            <tr>
                <td>@article.Id</td>
                <td>@article.Title</td>
                <td>@article.Created</td>
                <td>
                    <a href="/Articles/Details/@article.Id" class="btn btn-light">Details</a>
                    <a href="/Articles/Edit/@article.Id" class="btn btn-light">Edit</a>
                    <input type="button" value="Delete" class="btn btn-danger" 
                           @onclick="() => btnDelete_Click(article)"/>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
<Delete Model="_deleteModel" OnChanged="OnInitializedAsync"></Delete>

@code {

    [Inject]
    public ArticleAppDbContext DbContext { get; set; }

    private Article _deleteModel = new();

    private List<Article> _articles;

    protected override async Task OnInitializedAsync()
    {
        _articles = await DbContext.Articles.ToListAsync();
        _deleteModel = new();
    }

    protected void btnDelete_Click(Article model)
    {
        _deleteModel = model;
    }
}
